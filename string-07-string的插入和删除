#include<iostream>
using namespace std;

//string的插入和删除

void test01()
{
	string str1 = "hello";
	cout << "str1 = " << str1 << endl;

	//1.插入
	str1.insert(1, "999");
	cout << "str1 = " << str1 << endl;

	//2.删除
	str1.erase(1, 3);  //第1个位置起，删除3个.  // 0 1 2 3 位置排序
	cout << "str1 = " << str1 << endl;
}

int main()
{
	test01();

	system("pause");
	return 0;
}
