#include<iostream>
using namespace std;
#include<iostream>

//string字符存取

void test01()
{
	string str1 = "hello";

	cout << "str1 = " << str1 << endl;

	//1.str[i]
	for (int i = 0; i < str1.size(); i++)
	{
		cout << str1[i] << " ";
	}
	cout << endl;

	//2.str.at(i)
	for (int i = 0; i < str1.size(); i++)
	{
		cout << str1.at(i) << " ";
	}
	cout << endl;


	//3.修改
	str1[0] = 'A';
	cout << "str1 = " << str1 << endl;

	str1.at(1) = 'A';
	cout << "str1 = " << str1 << endl;
}

int main()
{
	test01();

	system("pause");
	return 0;
}
 
