#include<iostream>
using namespace std;
#include<string>

//string赋值操作
//1.operator=(...);
//2.assign(...);

void test01()
{

	string str1;
	str1 = "hello word";
	cout << str1 << endl;


	string str2;
	str2 = str1;
	cout << str2 << endl;


	string str3;
	str3 = 'a';
	cout << str3 << endl;
}

void test02()
{
	string str4;
	str4.assign("hello word test02()");
	cout << str4 << endl;


	string str5;
	str5.assign("hello word test02()", 4);
	cout << str5 << endl;


	string str6;
	str6.assign(str5);
	cout << str5 << endl;


	string str7;
	str7.assign(5, 'g');
	cout << str7 << endl;
}

int main()
{
	test01();
	test02();

	system("pause");
	return 0;
}
